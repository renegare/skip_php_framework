            { "src": "#LIB_ROOT#/tmpl/.keep", "dest": "#APP_ROOT#/app/log/.keep"},

            /* NPM Stuff */
            { "src": "#LIB_ROOT#/tmpl/npm_package.json", "dest": "#APP_ROOT#/package.json"},
            { "src": "#LIB_ROOT#/tmpl/npm_Gruntfile.js", "dest": "#APP_ROOT#/Gruntfile.js"}

